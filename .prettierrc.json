{
	"plugins": ["prettier-plugin-astro"],
	"quoteProps": "consistent",
	"overrides": [
		{
			"files": ["*.html", "*.css", "*.astro"],
			"options": {
				"printWidth": 9999
			}
		},
		{
			"files": ["*.js", "*.jsx", "*.vue"],
			"options": {
				"singleAttributePerLine": true
			}
		},
		{
			"files": ["*.jsonc"],
			"options": {
				"trailingComma": "none"
			}
		},
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
